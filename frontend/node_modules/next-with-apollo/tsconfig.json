{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es6",
      "esnext.asynciterable",
      "dom"
    ]
  }
}
